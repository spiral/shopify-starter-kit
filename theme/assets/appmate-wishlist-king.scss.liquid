  width: 32px;
  height: 32px;
  text-align: center;
  min-width: 0;

  .wk-icon-label {
    margin: 0 auto;
    text-transform: uppercase;
  }

  .wk-icon {
    display: inline-block;
    padding: 0;
    margin: 0 auto !important;
  }

