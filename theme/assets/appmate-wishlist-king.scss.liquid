$wk-page-title-color: #333;
$wk-variant-form-background: rgba(255,255,255,0.95);
$wk-add-to-cart-background: #333;
$wk-add-to-cart-color: #fff;
$wk-add-to-cart-background-hover: #333;
$wk-add-to-cart-color-hover: #fff;

